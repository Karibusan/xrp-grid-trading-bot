# Fichier .env.example pour xrp-grid-trading-bot

# Kraken API credentials
API_KEY=your_kraken_api_key_here
API_SECRET=your_kraken_api_secret_here

# Pushover notifications
PUSHOVER_USER_KEY=your_pushover_user_key
PUSHOVER_API_TOKEN=your_pushover_api_token

# Trading parameters (can be overridden by config.json)
SYMBOL=XXRPZUSD
BASE_CURRENCY=XRP
QUOTE_CURRENCY=USD
TRADE_AMOUNT=5

# Bot behavior
LOG_LEVEL=INFO
DRY_RUN=false

# Timezone & UID/GID (for Synology/docker)
TZ=Europe/London
PUID=1026
PGID=100

# === AI / LLM configuration ===
LLM_PROVIDER=openai              # openai | local | mistral | huggingface
LLM_API_KEY=your_openai_api_key  # only required for OpenAI
LLM_MODEL=gpt-4                  # or mistral, llama3, etc.
LLM_LOCAL_URL=http://localhost:11434  # only required for LLM_PROVIDER=local
